{
  "name": "graph",
  "version": "0.0.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.3.3",
    "@types/web": "^0.0.279",
    "husky": "^9.1.7",
    "syncpack": "^13.0.4",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.2",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check": "bun run syncpack && biome check && turbo run check",
    "dev": "turbo run dev",
    "format": "biome format && turbo run format",
    "lint": "turbo run lint",
    "prepare": "husky",
    "secrets:pull": "./scripts/secrets-pull.sh",
    "secrets:push": "./scripts/secrets-push.sh",
    "secrets:setup": "VAULT_ADDR=https://secrets.scottylabs.org vault login -method=oidc",
    "syncpack": "syncpack lint",
    "syncpack:fix": "syncpack format && syncpack fix-mismatches",
    "syncpack:update": "syncpack update",
    "tsc": "turbo run tsc"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
