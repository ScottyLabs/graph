{
  "name": "@graph/server",
  "version": "0.0.0",
  "dependencies": {
    "@tsoa/runtime": "^6.6.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "onchange": "^7.1.0",
    "openapi-typescript": "^7.10.1"
  },
  "private": true,
  "scripts": {
    "build": "bun build src/server.ts --outdir=dist --target=bun --sourcemap",
    "check": "tsc -b && biome check",
    "dev": "concurrently 'bun run server' 'bun run tsoa:watch'",
    "format": "biome format",
    "lint": "biome lint",
    "openapi": "openapi-typescript ./build/swagger.yaml -o ./build/swagger.d.ts",
    "server": "dotenv -e .env -- bun run --watch src/server.ts",
    "start": "bun dist/server.js",
    "tsc": "tsc -b",
    "tsoa": "tsoa spec-and-routes",
    "tsoa:watch": "onchange 'src/controllers/*.ts' 'tsoa.json' -- bun run tsoa"
  },
  "type": "module"
}
