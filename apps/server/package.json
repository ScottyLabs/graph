{
  "name": "@graph/server",
  "version": "0.0.0",
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "tsoa": "^6.6.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "dotenv-cli": "^11.0.0"
  },
  "private": true,
  "scripts": {
    "build": "bun build src/server.ts --outdir=dist --target=bun --sourcemap",
